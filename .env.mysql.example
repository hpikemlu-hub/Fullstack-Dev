# MySQL Environment Configuration Example
# Copy this file to .env and update the values for your environment

# Database Type
DB_TYPE=mysql

# MySQL Connection Settings
DB_HOST=mysql-service.dokploy.local
DB_PORT=3306
DB_NAME=workload_db
DB_USER=workload_user
DB_PASSWORD=your_secure_mysql_password_here

# MySQL Connection Pool Settings
DB_CONNECTION_LIMIT=20
DB_CONNECTION_TIMEOUT=60000
DB_ACQUIRE_TIMEOUT=60000

# Fallback Settings
MYSQL_FALLBACK_TO_SQLITE=false

# Application Settings
NODE_ENV=production
PORT=3000

# Security Settings
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
CORS_ORIGIN=https://your-app-domain.dokploy.app

# Migration Control
MIGRATE_TO_MYSQL=false
RUN_MIGRATIONS=false
RUN_SEED=false

# Admin Reset
RESET_ADMIN=false

# User/Group Settings for Docker
PUID=1000
PGID=1000