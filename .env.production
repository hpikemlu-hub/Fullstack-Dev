# Production Environment Variables for Docker Compose
# Copy this file to .env.production.local and update with your values

# MySQL Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password_change_this
MYSQL_PASSWORD=your_secure_mysql_password_change_this
MYSQL_DATA_PATH=./data/mysql
MYSQL_LOGS_PATH=./logs/mysql

# Application Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
CORS_ORIGIN=https://your-app-domain.dokploy.app

# Data Paths
APP_DATA_PATH=./data/app
APP_LOGS_PATH=./logs/app
APP_UPLOADS_PATH=./data/uploads

# Application Settings
NODE_ENV=production
PORT=3000

# Database Configuration
DB_TYPE=mysql
DB_HOST=mysql
DB_PORT=3306
DB_NAME=workload_db
DB_USER=workload_user
DB_CONNECTION_LIMIT=20
DB_CONNECTION_TIMEOUT=60000
DB_ACQUIRE_TIMEOUT=60000
MYSQL_FALLBACK_TO_SQLITE=false

# Migration Control
MIGRATE_TO_MYSQL=true
RUN_MIGRATIONS=true
RUN_SEED=true
RESET_ADMIN=false

# User/Group Settings
PUID=1000
PGID=1000